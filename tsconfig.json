{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "declaration": true,
    "module": "esnext",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": false,
    "jsx": "react-jsx",
  },
  "include": [
    "**/*.css",
    "src/*",
  ],
  "exclude": [
    "node_modules",
  ]
}